
<li id="<%= @entry_item.id %>">
  <%= link_to gravatar_for(@entry_item.user), @entry_item.user %>
  <span class="user">
    <%= link_to @entry_item.user.name, @entry_item.user %>
  </span>
  <span class="title"><%= @entry_item.title %></span>
  <span class="body"><%= @entry_item.body %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(@entry_item.created_at) %> ago.
  </span>
   <% if current_user?(@entry_item.user) %>
    <%= link_to "delete", @entry_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: @entry_item.title %>
  <% end %>
   <%= link_to pluralize(@entry_item.comments.count, "comment"), newComment_path(:entry_id => @entry_item.id) %>
</li>