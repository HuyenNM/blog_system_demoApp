<% if comment_item.user %>
<li id="<%= comment_item.id %>">  
  <%= link_to gravatar_for(comment_item.user ), comment_item.user %>
  <span class="user">
    <%= link_to comment_item.user.name, comment_item.user %>
  </span>
  <span class="body"><%= comment_item.contend %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment_item.created_at) %> ago.
  </span>
   <% if current_user?(comment_item.user) %>
    <%= link_to "delete", comment_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: comment_item.contend %>
  <% end %>
</li>
  <% end %>